{
    "name": "crate/crate-pdo",
    "description": "A PDO adapter for interacting with the Crate.io DBMS",
    "license": "Apache2",
    "homepage": "https://github.com/crate/crate-pdo",
    "keywords": ["database", "pdo", "crate"],
    "require": {
        "php":     "~5.5|~7.0",
        "ext-pdo": "*",
        "guzzlehttp/guzzle": "~6.0"
    },
    "autoload": {
        "psr-0": {
            "Crate\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "~1.5.2"
    },
    "autoload-dev": {
        "psr-0": {
            "CrateTest\\PDO\\": "test",
            "CrateIntegrationTest\\PDO\\": "test"
        }
    }
}
